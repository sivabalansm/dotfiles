!options
URxvt.font: xft:Fira Code:size=13
URxvt.scrollBar: false
URxvt.saveLines: 65535

!perl urxvt extensions
URxvt.perl-ext-common: default,keyboard-select,matcher,url-select,eval

!Select text in terminal VI mode and copy to clipboard
URxvt.keyboard-select.clipboard: true
URxvt.keysym.C-n: perl:keyboard-select:activate

!Ctrl-Shit-V and Ctrl-Shift-C for pasting and copying
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

!clickable links
URxvt.url-launcher: firefox
URxvt.matcher.button: 1

URxvt.keysym.C-l: perl:url-select:select_next
URxvt.url-select.launcher: firefox
URxvt.url-select.underline: true

!Disable the old control-alt-v and c for copying and pasting
URxvt.keysym.Control-Meta-c: builtin-string:
URxvt.keysym.Control-Meta-v: builtin-string:

!Disable these modes that activate on Ctrl-Shift
URxvt.iso14755: false
URxvt.iso14755_52: false

!!!!!!!!!!!!!!! COLORS !!!!!!!!!!!!!! 
URxvt.dynamicColors: on

!monokai variant probably
!special
*.foreground:   #f1ebeb
*.background:   #272822
*.cursorColor:  #f1ebeb

! black
*.color0:       #48483e
*.color8:       #76715e

! red
*.color1:       #dc2566
*.color9:       #fa2772

! green
*.color2:       #8fc029
*.color10:      #a7e22e

! yellow
*.color3:       #d4c96e
*.color11:      #e7db75

! blue
*.color4:       #55bcce
*.color12:      #66d9ee

! magenta
*.color5:       #9358fe
*.color13:      #ae82ff

! cyan
*.color6:       #56b7a5
*.color14:      #66efd5

! white
*.color7:       #acada1
*.color15:      #cfd0c2
